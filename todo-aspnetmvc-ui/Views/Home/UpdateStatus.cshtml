@model ToDoTask

@{
    ViewData["Title"] = "Update Task Status";
}

<h1>Update Status</h1>
<h4>You edit list "@Model.TaskTitle"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskId" />
            <div class="form-group">
                <label asp-for="TaskStatus" class="control-label"></label>
                <select asp-for="TaskStatus" class="form-control" asp-items="@Html.GetEnumSelectList<Status>()"></select>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
                <a href="javascript:history.go(-1)" class="btn btn-outline-dark btn-sm">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

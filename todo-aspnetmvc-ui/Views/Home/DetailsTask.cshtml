@model ToDoTask

@{
    ViewData["Title"] = "Task Details";
}

<h1>
    @Model.TaskTitle
    @if (Model.TaskTag != null && Model.TaskTag != string.Empty)
    {
        <span style="float:right">
            <span class="badge badge-primary">@Model.TaskTag</span>
        </span>
    }
</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskStatus)
        </dd>
        @if (Model.TaskDescription != null && Model.TaskDescription != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TaskDescription)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TaskDescription)
            </dd>
        }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskCreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskCreationDate)
        </dd>
        @if (Model.TaskDueDate != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TaskDueDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TaskDueDate)
            </dd>
        }

        @if (Model.TaskNotes != null && Model.TaskNotes != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TaskNotes)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TaskNotes)
            </dd>
        }

        @if (Model.TaskTag != null && Model.TaskTag != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TaskTag)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TaskTag)
            </dd>
        }

    </dl>
</div>
<div>
    <a href='@Url.Action("EditTask", "Home", new { id = Model.TaskId })' class="btn btn-outline-dark">Edit</a>
    <a href="javascript:history.go(-1)" class="btn btn-outline-dark btn-sm">Back</a>
</div>
